<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border2</item>
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColorHint">#6C6B6B</item>
        <item name="android:textSize">@dimen/_15sdp</item>

    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="font">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/acme</item>
        <item name="android:textSize">@dimen/_14sdp</item>

    </style>

    <style name="cat">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_120sdp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="heading">
        <item name="android:fontFamily">@font/biorhyme</item>
        <item name="android:textColor">#646566</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="cardviewStyle">
       <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">20dp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="elevation">8dp</item>

    </style>

    <style name="signup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/border2</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="fontFamily">@font/acme</item>
    </style>

    <style name="multiLineText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/averia_libre</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>